<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.1</TargetFramework>
    <Nullable>enable</Nullable>
    <Description>C# serialization library for the Hedgehog Set Object Notation ("HSON") format.</Description>
    <Copyright>Copyright (c) 2023 Radfordhound</Copyright>
    <PackageProjectUrl>https://github.com/hedge-dev/libHSON-csharp</PackageProjectUrl>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <RepositoryUrl>https://github.com/hedge-dev/libHSON-csharp</RepositoryUrl>
    <PackageLicenseFile>LICENSE.txt</PackageLicenseFile>
    <Title>libHSON</Title>
    <PackageTags>hson;file-format;sonic-the-hedgehog;modding</PackageTags>
    <Authors>Radfordhound</Authors>
  </PropertyGroup>

  <ItemGroup>
    <None Include="..\LICENSE.txt">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
    <None Include="..\README.md">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="System.Text.Json" Version="7.0.2" />
  </ItemGroup>

</Project>
